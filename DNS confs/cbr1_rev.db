;
; BIND reverse data file for local loopback interface
;
$TTL	604800
@	IN	SOA	dns1.cbr.gisi.pt. webmaster.cbr.gisi.pt. (
		 2022030900		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
@	IN	NS	dns1.cbr.gisi.pt.
@	IN	NS	dns2.lx.gisi.pt.


dns1.cbr.gisi.pt.	IN 	A 	10.254.254.1
dns2.lx.gisi.pt.	IN 	A 	10.254.254.2

5 	PTR 	mx.cbr.gisi.pt.
; Mail server should be added here

10      IN      PTR      dhcp4.cbr.gisi.pt.
11      IN      PTR      dhcp5.cbr.gisi.pt.
12      IN      PTR      dhcp6.cbr.gisi.pt.