;
; BIND data file for local loopback interface
;
$TTL	604800
@	IN	SOA	dns1.gisi.pt. webmaster.gisi.pt. (
			 2022030601	; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
		IN	NS 	dns1
		IN 	MX	10	mx.cbr
		IN 	MX	10	mx.lx


dns1 		IN 	A	10.254.254.1
ssh		IN	CNAME	dns1

web 		IN	CNAME	web.lx
ftp		IN	CNAME	web.lx	
web.lx		IN	A	8.8.8.8

mail.cbr	IN	A	1.1.1.1
webmail		IN 	CNAME	mail.cbr
pop		 IN 	CNAME	mail.cbr
imap		 IN 	CNAME	mail.cbr

mx.cbr		   IN 	A	172.20.1.5
mx.lx		   IN 	A	172.21.1.5
